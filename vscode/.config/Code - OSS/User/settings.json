{
  "editor.fontFamily": "Jetbrains Mono",
  "editor.fontSize": 12,
  "editor.fontLigatures": true,
  "editor.lineHeight": 14,
  "workbench.colorTheme": "White Night",
  "window.zoomLevel": 0,
  "window.menuBarVisibility": "hidden",
  "editor.renderIndentGuides": true,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.tabCloseButton": "off",
  "breadcrumbs.enabled": false,
  "editor.lineNumbers": "on",
  "editor.tabSize": 2,
  "editor.formatOnPaste": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "workbench.activityBar.visible": false,
  "editor.formatOnSave": false,
  "editor.minimap.showSlider": "always",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontFamily": "Fantasque Sans Mono",
  "explorer.confirmDelete": false,
  
  "terminal.external.linuxExec": "alacritty",
  "editor.tokenColorCustomizations": {
    "[White Night]": {
      "comments": "#ff7979",
      // "functions": "#badc58",
      "functions": "#999",
    },
  },
  "workbench.colorCustomizations": {
    "[White Night]": {
      "statusBar.foreground": "#7f8fa6",
      "tab.inactiveForeground": "#a4b0be",
      "editorLineNumber.activeForeground": "#7f8fa6",
      "editorLineNumber.foreground": "#353b48",
      "editor.lineHighlightBackground": "#102020"
    },
  },
  "editor.minimap.renderCharacters": false,
  "explorer.confirmDragAndDrop": false,
  "editor.cursorStyle": "block",
  "workbench.iconTheme": null,
  "workbench.statusBar.visible": true,
  "python.dataScience.sendSelectionToInteractiveWindow": true,
  "python.dataScience.jupyterServerURI": "local",
  "python.formatting.provider": "autopep8",
  "kite.showWelcomeNotificationOnStartup": false,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.enabled": true,
  "python.linting.banditEnabled": false,
  "timeline.excludeSources": [],
}