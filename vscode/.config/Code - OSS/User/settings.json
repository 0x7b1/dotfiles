{
  "editor.fontFamily": "Sudo",
  "editor.fontSize": 16,
  "editor.lineHeight": 14,
  "workbench.colorTheme": "White Night",
  "window.zoomLevel": 0,
  "window.menuBarVisibility": "hidden",
  "editor.renderIndentGuides": true,
  "editor.minimap.enabled": true,
  "workbench.iconTheme": "vs-minimal",
  "editor.wordWrap": "off",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.tabCloseButton": "off",
  "breadcrumbs.enabled": false,
  "editor.lineNumbers": "on",
  "editor.tabSize": 2,
  "editor.formatOnPaste": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "workbench.activityBar.visible": false,
  "workbench.sideBar.location": "left",
  "workbench.panel.defaultLocation": "right",
  "editor.formatOnSave": true,
  "editor.minimap.showSlider": "always",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontFamily": "Input Mono Narrow",
  "explorer.confirmDelete": false,
  "editor.tokenColorCustomizations": {
    "[White Night]": {
      "comments": "#ff6b81",
      "functions": "#badc58",
    }
  },
  "workbench.colorCustomizations": {
    "[White Night]": {
      "tab.inactiveForeground": "#a4b0be",
      "editorLineNumber.activeForeground": "#7f8fa6",
      "editorLineNumber.foreground": "#353b48",
      "editor.lineHighlightBackground": "#102020"
    },
  },
  "editor.minimap.renderCharacters": false,
  "explorer.confirmDragAndDrop": false,
  "editor.cursorStyle": "block",
}